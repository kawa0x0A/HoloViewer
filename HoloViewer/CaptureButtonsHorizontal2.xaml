<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HoloViewer.CaptureButtonsHorizontal2">
    <HorizontalStackLayout>
        <CheckBox IsChecked="{Binding Path=IsCapture[0]}" HorizontalOptions="Center" VerticalOptions="Center" />
        <Image Source="icon_screen_horizontal2_capture_top.png" WidthRequest="32" HeightRequest="32" HorizontalOptions="Center" VerticalOptions="Center" />
        <CheckBox IsChecked="{Binding Path=IsCapture[1]}" HorizontalOptions="Center" VerticalOptions="Center" />
        <Image Source="icon_screen_horizontal2_capture_bottom.png" WidthRequest="32" HeightRequest="32" HorizontalOptions="Center" VerticalOptions="Center" />
    </HorizontalStackLayout>
</ContentView>
